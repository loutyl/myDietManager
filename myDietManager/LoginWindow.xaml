<Window x:Class="myDietManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="141" Width="234" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Select User" HorizontalAlignment="Center" Margin="0"/>
            <ComboBox Margin="10,0,10,0"></ComboBox>
        </StackPanel>

        <UniformGrid Grid.Row="1" Columns="2">
            <Button x:Name="BtnAddNewUser" Content="Add User" HorizontalAlignment="Right" Margin="0,20,20,0" Click="BtnAddNewUser_Click"></Button>
            <Button x:Name="BtnLoadUser" Content="Load User" HorizontalAlignment="Left" Margin="20,20,0,0"></Button>
        </UniformGrid>
    </Grid>
</Window>
